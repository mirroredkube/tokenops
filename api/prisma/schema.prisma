// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ---------- Networks ----------
enum Ledger {
  XRPL_TESTNET
  XRPL_MAINNET
}

// ---------- On-ledger issuance artifacts ----------
model Token {
  id            String   @id @default(cuid())
  currencyCode  String
  amount        String
  destination   String
  issuer        String
  createdAt     DateTime @default(now())

  events        TokenEvent[]
}

model TokenEvent {
  id           String   @id @default(cuid())
  tokenId      String
  type         String
  ledgerTxHash String?
  memo         String?
  createdAt    DateTime @default(now())

  token Token @relation(fields: [tokenId], references: [id], onDelete: Cascade)
  @@index([tokenId])
}

// ---------- Off-chain registry with compliance ----------
model TokenRecord {
  id             String   @id @default(cuid())
  ledger         Ledger
  symbol         String
  supply         String          // keep as string to avoid bigint/decimal edges
  issuerAddress  String
  holderAddress  String?
  txHash         String   @unique
  compliance     Json?           // JSONB on Postgres
  createdAt      DateTime @default(now())

  @@index([symbol, ledger])
  @@index([createdAt])
}

// ---------- User Management ----------
model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  sub           String   @unique // OAuth sub from Google
  role          String   @default("user") // "admin" or "user"
  twoFactorSecret String? // Encrypted 2FA secret
  twoFactorEnabled Boolean @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([email])
  @@index([sub])
}